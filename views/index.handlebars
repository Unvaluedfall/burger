<div class="container container-sm">
    <div class="row">
      <div class="col text-center">
           {{!-- Image and Title --}}
          <img class="img-fluid" src="../../assets/img/thick-burger-vector.jpg" alt="Burger">
          <h1>Eat-Da-Burger!</h1> 
      </div>
    </div>
  <div class="row">

    <div class="col-12 col-md-6">   
      <h2>Burgers Not Eaten!</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{this.burger_name}}
              <button class="change-devoured" data-id="{{this.id}}">
                Devour
              </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-12 col-md-6">
      <h2>Burger Eaten!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{this.burger_name}} 
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <h2 class="text-center">Add A Burger</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="burger">Burger:</label>
      <input type="text" id="burger" name="burgerName">
    </div>
    <div class="text-center">
      <button type="submit">Add A Burger!</button>
    </div>
  </form>
</div>

