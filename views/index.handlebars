
<div class="container">

<h1>Eat-Da-Burger!</h1>

<h2>Burgers Not Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
    {{this.burger_name}}   

	<button class="change-devoured" data-id="{{this.id}}">
    Devour
  </button>

    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{this.burger_name}}   

	      <button class="change-devoured" data-id="{{this.id}}">
          UnDevour
        </button>

      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger:</label>
    <input type="text" id="burger" name="burgerName">
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>

